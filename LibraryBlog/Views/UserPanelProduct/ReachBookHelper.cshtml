@model EntityLayer.Concrete.RequestsOfProduct

<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Talep Notunu Giriniz</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("ReachBookHelper", "UserPanelProduct", FormMethod.Post))
                {
                    @Html.Label("Talep Notu")
                    @Html.TextBoxFor(x => x.RequestNote, new { @class = "form-control" })
                    @Html.TextBoxFor(x => x.UserId, new { @class = "form-control", @readOnly = true })
                    <button class="btn btn-info">Kaydet</button>
                }
            </div>
