@model EntityLayer.Concrete.Product
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kitap Güncelleme Sayfası</h2><br />
@using (Html.BeginForm("EditProduct", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kitap Id")
        @Html.TextBoxFor(x => x.ProductId, new {@class="form-control", @readonly = true })
        <br />
        @Html.Label("Kitap Adı")
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        <br />
        @Html.Label("Kitabın Resmi")
        @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })
        <br />
        @Html.Label("Kitabın Açıklaması")
        @Html.TextAreaFor(x => x.ProductDescription, new { @class = "form-control" })
        <br />
        @Html.Label("Kitabın Dili")
        @Html.TextBoxFor(x => x.Language, new { @class = "form-control" })
        <br />
        @Html.Label("Kitabın Sayfa Sayısı")
        @Html.TextBoxFor(x => x.NoOfPage, new { @class = "form-control" })
        <br />
        @Html.Label("Yayınlanma Tarihi")
        @Html.TextBoxFor(x => x.PublishingDate, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.valueCategoryForEdit, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar")
        @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.valueWriterForEdit, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}